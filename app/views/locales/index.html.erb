<p id="notice"><%= notice %></p>

<h1>Listing Locales</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>State</th>
      <th>Street</th>
      <th>Number</th>
      <th>Zip</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locales.each do |locale| %>
      <tr>
        <td><%= locale.title %></td>
        <td><%= locale.description %></td>
        <td><%= locale.state %></td>
        <td><%= locale.street %></td>
        <td><%= locale.number %></td>
        <td><%= locale.zip %></td>
        <td><%= locale.category %></td>
        <td><%= link_to 'Show', locale %></td>
        <td><%= link_to 'Edit', edit_locale_path(locale) %></td>
        <td><%= link_to 'Destroy', locale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Locale', new_locale_path %>

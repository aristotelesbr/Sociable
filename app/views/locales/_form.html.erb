<%= form_for(@locale) do |f| %>
  <% if @locale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@locale.errors.count, "error") %> prohibited this locale from being saved:</h2>

      <ul>
      <% @locale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
  <% if current_user ==  :admin %>
     <div class="field">
      <%= f.label :status %><br>
      <%= f.check_box :status %>
  </div>
  <%end %>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, list,
      :id, :description, prompt: 'Selecione uma categoria') %>
  </div><br>
  <div class="actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
